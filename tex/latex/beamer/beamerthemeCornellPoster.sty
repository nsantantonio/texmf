%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\setbeamercolor{headline}{fg=Carnellian,bg=LightGray} % Header background
\setbeamercolor{footline}{fg=Carnellian, bg=Carnellian} % ?
\setbeamerfont{footline}{size=\large,series=\tt}
\setbeamercolor{separation line}{bg=Carnellian} % separates header and footer
\setbeamercolor{title in headline}{fg=DarkGray}  % title
\setbeamercolor{author in headline}{fg=Carnellian} % Authors
\setbeamercolor{institute in headline}{fg=Carnellian} % institution

\setbeamercolor{framesubtitle}{fg=Carnellian, bg=Carnellian} % ?
\setbeamercolor{author in head/foot}{fg=Carnellian, bg=White} % bottom label
\setbeamercolor{title in head/foot}{fg=Carnellian, bg=Carnellian} % ?

\setbeamercolor*{normal text}{fg=DarkGray, bg=White}  % background color and text (won't be text here usually)
\setbeamercolor*{block body}{bg=LightGray ,fg=DarkGray} % main block background
\setbeamercolor*{block title}{fg=LightGray,bg=DarkGray} % main block title background and text
\setbeamerfont{block title}{size=\large,series=\bf}
\setbeamercolor{upper separation line head}{fg=DarkGray}  % ?

\setbeamercolor*{example body}{fg=Carnellian,bg=Carnellian} % ?
\setbeamercolor*{example text}{fg=Carnellian,bg=Carnellian}
\setbeamercolor*{example title}{bg=Carnellian,fg=Carnellian}

\setbeamercolor{alerted text}{fg=Carnellian}

\setbeamercolor{example text}{fg=Carnellian}
\setbeamercolor{structure}{fg=Carnellian}   % Figure/table labels, bullets etc

\setbeamertemplate{itemize items}[triangle]
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{block begin}{
  \vskip.75ex
  \begin{beamercolorbox}[ht=3.5ex,dp=0.5ex,center,leftskip=-1em,colsep*=.75ex]{block title}%
    \usebeamerfont*{block title}%
    {\phantom{Gg}\insertblocktitle}% phantom because of baseline problem
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[leftskip=1em,colsep*=.75ex,sep=0.5ex,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  }
  \setbeamertemplate{block end}{
  \end{beamercolorbox}
}

